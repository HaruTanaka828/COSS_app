<div class="work-top">
　社員専用<span><%= link_to "　TOP", staff_root_path%> >> 登録情報編集</span>
</div><br>

<div class="container">
  <div class="row">
    <div class="col-xs-3">
    </div>
    <div class="col-xs-6">

<%= form_for(@staff, url: staff_edit_path) do |f| %>

<table class="table">
  <tr>
    <th><span><%= image_tag attachment_url(@staff, :image, :fill, 100, 100, format: "jpg",fallback: "no_image.jpg"),class: 'staff-image' %></span></th>
    <td><br><br><%= f.attachment_field :image %></td>
  </tr>
  <tr>
    <th>社員番号</th>
    <td><span><%= f.text_field :staff_number, placeholder: "社員番号"%></span></td>
  </tr>
  <tr>
    <th>役職</th>
    <td><span><%= f.text_field :position, placeholder: "役職" %></span></td>
  </tr>
  <tr>
    <th>氏名</th>
    <td>
      <span><%= f.text_field :last_name, placeholder: "姓"%></span>
      <span><%= f.text_field :first_name, placeholder: "名"%></span>
    </td>
  </tr>
  <tr>
    <th>カナ</th>
    <td>
      <span><%= f.text_field :last_name_kana, placeholder: "セイ" %></span>
      <span><%= f.text_field :first_name_kana, placeholder: "メイ" %></span>
    </td>
  </tr>
  <tr>
    <th>郵便番号</th>
    <td><span><%= f.text_field :post_code, placeholder: "郵便番号" %></span></td>
  </tr>
  <tr>
    <th>住所</th>
    <td><span><%= f.text_field :address, placeholder: "住所",:size=>"48"%></span></td>
  </tr>
  <tr>
    <th>電話番号</th>
    <td><span><%= f.text_field :phone_number, placeholder: "電話番号" %></span></td>
  </tr>
  <tr>
    <th>緊急連絡先(続柄)</th>
    <td><%= f.text_field :emergency_relationship, placeholder: "続柄" %></td>
  </tr>
  <tr>
    <th>緊急連絡先(番号)</th>
    <td><span><%= f.text_field :emergency_number, placeholder: "番号" %></span></td>
  </tr>
</table>

  <div class="right">
    <%= f.submit "編集を更新",class:"btn btn-primary" %>
  </div>
<% end %>

<%= link_to staff_root_path do %>
  <p><i class="fas fa-backward"></i> Back</p>
<% end %>

    </div>
  </div>
</div>
