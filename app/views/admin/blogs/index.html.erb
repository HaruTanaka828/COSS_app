<h3>公開ブログ一覧</h3>

<table>
  <thead>
    <tr>
	  <th>社員</th>
	  <th>タイトル</th>
	  <th>投稿日</th>
	</tr>
  </thead>
  <tbody>
    <% @blogs.each do |blog| %>
	<tr>
	  <td><%= blog.staff.full_name %></td>
	  <td><%= link_to blog.title, admin_blog_path(blog.id) %></td>
	  <td><%= blog.created_at.strftime('%Y/%m/%d %H:%M')%></td>
	</tr>
	<% end %>
  </tbody>
</table>

<%= link_to admin_root_path do %>
  <p><i class="fas fa-backward"></i> Back</p>
<% end %>