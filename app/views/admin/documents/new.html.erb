<h3>ファイル送信</h3>

<%= form_for(@document, url: admin_documents_path) do |f| %>

<div>宛先<%= f.collection_select :staff_id, Staff.all, :id, :full_name, :prompt => "社員を選択" %></div>
  <div>ファイル名<%= f.text_field :name %></div>
  <div><%= f.file_field :file %></div>

  <div><%= f.submit '送信'%></div>

<% end %>

<%= link_to admin_root_path do %>
  <p><i class="fas fa-backward"></i> Back</p>
<% end %>