<h3>社員Blog</h3>
<table>
	<% @blogs.each do |blog| %>
		<tr>
			<td><%= image_tag attachment_url(blog, :image, :fill, 70, 70, format: "jpg") %></td>
			<td>
				<%= link_to blog_path(blog.id) do %>
					<%= blog.title %>
				<% end %>
			</td>
			<td><%= blog.created_at.strftime('%Y年%m月%d日')%></td>
		</tr>
	<% end %>
</table>
