<h2>社員新規登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "staffs/shared/error_messages", resource: resource %>

  <div class="field">
　　<%= f.text_field :staff_number, autofocus: true, placeholder: "社員番号"%>
  </div>

  <div class="field">
　　<%= f.text_field :last_name, placeholder: "姓"%>
  </div>

  <div class="field">
　　<%= f.text_field :first_name, autofocus: true, placeholder: "名"%>
  </div>

  <div class="field">
　　<%= f.text_field :last_name_kana, autofocus: true, placeholder: "セイ" %>
  </div>

  <div class="field">
　　<%= f.text_field :first_name_kana, autofocus: true, placeholder: "メイ" %>
  </div>

  <div class="field">
　　<%= f.text_field :position, autofocus: true, placeholder: "役職" %>
  </div>

  <div class="field">
　　<%= f.text_field :post_code, autofocus: true, placeholder: "郵便番号" %>
  </div>

  <div class="field">
　　<%= f.text_field :address, autofocus: true, placeholder: "住所" %>
  </div>

  <div class="field">
    <%= f.email_field :email, autofocus: true, placeholder: "メールアドレス" %>
  </div>

  <div class="field">
    <%= f.text_field :phone_number, autofocus: true, placeholder: "電話番号" %>
  </div>

  <div class="field">
    <%= f.text_field :emergency_relationship, autofocus: true, placeholder: "緊急続柄" %>
  </div>

  <div class="field">
    <%= f.text_field :emergency_number, autofocus: true, placeholder: "緊急番号" %>
  </div>

  <div class="field">
    <%= f.password_field :password, placeholder: "パスワード"%>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, placeholder: "パスワード確認"%>
  </div>

  <div class="field">
    <%= link_to '就業規則.pdf', '/就業規則.pdf' %>
    <span>就業規則に同意する</span>
    <%= f.check_box :accepted ,{},checked_value = "true",unchecked_value = "false" %>
  </div>

  <div class="actions">
    <%= f.submit "登録" %>
  </div>
<% end %>

<p><%= link_to "ログインはこちら", new_staff_session_path %></p>





