<header>
  <nav class="navbar navbar-static-top">
    <div class="container-fluid">
      <div class="navbar-header">
        <%= link_to root_path do %>
        <img alt="ロゴ画像" src="<%= asset_path "logo.png" %>" style="height: 40px; margin-top:10px">
        <% end %>
      </div>
    </div>
  </nav>
</header>

<div class="work-top">　社員専用<span>　新規登録</span></div><br><br>

<div class="container">
  <div class="row">
    <div class="col-xs-2">
    </div>
    <div class="col-xs-8">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "staffs/shared/error_messages", resource: resource %>

<table class="table">
  <tr>
    <th>社員番号</th>
    <td><span><%= f.text_field :staff_number, autofocus: true, placeholder: "社員番号"%> (数字4桁・ご不明な場合は担当者にお尋ねください)</span></td>
  </tr>
  <tr>
    <th>役職</th>
    <td><span><%= f.text_field :position, placeholder: "役職" %> (新入社員の方は"新入社員"とご入力ください)</span></td>
  </tr>
  <tr>
    <th>氏名</th>
    <td>
      <span><%= f.text_field :last_name, placeholder: "姓"%></span>
      <span><%= f.text_field :first_name, placeholder: "名"%></span>
    </td>
  </tr>
  <tr>
    <th>カナ</th>
    <td>
      <span><%= f.text_field :last_name_kana, placeholder: "セイ" %></span>
      <span><%= f.text_field :first_name_kana, placeholder: "メイ" %></span>
    </td>
  </tr>
  <tr>
    <th>郵便番号</th>
    <td><span><%= f.text_field :post_code, placeholder: "郵便番号" %> (ハイフンなし7桁)</span></td>
  </tr>
  <tr>
    <th>住所</th>
    <td><span><%= f.text_field :address, placeholder: "住所",:size=>"48"%></span></td>
  </tr>
  <tr>
    <th>電話番号</th>
    <td><span><%= f.text_field :phone_number, placeholder: "電話番号" %></span></td>
  </tr>
  <tr>
    <th>緊急連絡先(続柄)</th>
    <td><%= f.text_field :emergency_relationship, placeholder: "続柄" %> (3親等以内の親族)</td>
  </tr>
  <tr>
    <th>緊急連絡先(番号)</th>
    <td><span><%= f.text_field :emergency_number, placeholder: "番号" %></span></td>
  </tr>
  <tr>
    <th>メールアドレス</th>
    <td><span><%= f.email_field :email, placeholder: "メールアドレス" %> (ログインに必要なので入力ミスにご注意ください)</span></td>
  </tr>
  <tr>
    <th>パスワード</th>
    <td><%= f.password_field :password, placeholder: "パスワード"%> (6文字以上英数字)</td>
  </tr>
  <tr>
    <th>パスワード(確認)</th>
    <td><%= f.password_field :password_confirmation, placeholder: "パスワード確認"%></td>
  </tr>
  <tr>
    <th><%= link_to '就業規則.pdf', '/work_role.pdf' %></th>
    <td>就業規則に同意する<%= f.check_box :accepted ,{},checked_value = "true",unchecked_value = "false" %></td>
  </tr>

</table>

  <div class="right">
    <%= f.submit "新規登録",class:"btn btn-success" %>
  </div>
<% end %>

<p><%= link_to "ログインはこちら", new_staff_session_path %></p>

    </div>
  </div>
</div>

