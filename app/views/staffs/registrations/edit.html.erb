<div class="work-top">
　社員専用<span><%= link_to "TOP", staff_root_path%> >> <%= link_to "登録情報編集", staff_edit_path%> >> アドレス・パスワード変更</span>
</div><br>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "staffs/shared/error_messages", resource: resource %>


<div class="container">

  <div class="row">
    <br><br><br><br><br>
  </div>

  <div class="row">

      <div class="col-xs-4">
      </div>

      <div class="col-xs-4">
      <div class="center">

        <div class="field">
          <p>メールアドレス</p>
          <%= f.email_field :email,　autocomplete: "email",class:'form-control',placeholder: "メールアドレス"%>
        </div><br>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="field">
          <p>新しいパスワード(アドレス変更のみの場合空白)</p>
          <%= f.password_field :password, autocomplete: "new-password",class:'form-control',placeholder: "新しいパスワード"%>
          <% if @minimum_password_length %>
            <em><% @minimum_password_length %></em>
          <% end %>
        </div><br>

        <div class="field">
          <%= f.password_field :password_confirmation, autocomplete: "new-password",class:'form-control',placeholder: "新しいパスワード(確認用)"%>
        </div><br>

        <div class="field">
          <p>現在のパスワード(必須)</p>
          <%= f.password_field :current_password, autocomplete: "current-password",class:'form-control',placeholder: "現在のパスワード"%>
        </div><br>

        <div class="actions">
          <%= f.submit "変更",class:"btn btn-sm btn-block btn-primary" %>
        </div><br>

      </div>
        <%= link_to staff_edit_path do %>
          <p><i class="fas fa-backward"></i> Back</p>
        <% end %>
      </div>

  </div>
</div>

<% end %>





