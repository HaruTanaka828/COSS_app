<div class="work-top">　社員専用<span>　ログイン</span></div>

<div class="center">
<div class="container">

  <div class="row">
    <br><br><br><br><br>
  </div>

  <div class="row">

      <div class="col-xs-4">
      </div>

      <div class="col-xs-4">
        <h3>社員ログイン</h3><br>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field">
            <%= f.email_field :email, autofocus: true, autocomplete: "email",class:'form-control',placeholder: "メールアドレス"%><br>
          </div>
          <div class="field">
            <%= f.password_field :password, autocomplete: "current-password",class:'form-control',placeholder: "パスワード" %>
          </div>
          <br>
          <div class="actions">
            <%= f.submit "ログイン",class:"btn btn-block btn-primary" %>
          </div><br>
          <% end %>
            <span><%= link_to "管理者ログインはこちら", new_admin_session_path %></span>
            / <span><%= link_to "新規登録はこちら", new_staff_registration_path %></span>
      </div>
      <div class="col-xs-4">
      </div>
  </div>

</div>
</div>